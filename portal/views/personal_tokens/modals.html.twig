{# Modal templates for Personal Tokens #}

{# Create Token Modal #}
<div class="modal fade" id="createTokenModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">{{ 'Portal:PersonalTokens:CreateNew'|dict_s }}</h4>
            </div>
            <form id="createTokenForm">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="token-application">{{ 'Class:PersonalToken/Attribute:application'|dict_s }}</label>
                        <input type="text" class="form-control" id="token-application" name="application" required>
                        <small class="form-text text-muted">{{ 'Class:PersonalToken/Attribute:application+'|dict_s }}</small>
                    </div>
                    <div class="form-group">
                        <label for="token-scope">{{ 'Class:PersonalToken/Attribute:scope'|dict_s }}</label>
                        <select class="form-control" id="token-scope" name="scope" required>
                            <option value="REST/JSON">REST API (JSON)</option>
                            <option value="Export">Export Data</option>
                            <option value="REST/JSON,Export">Full Access (REST + Export)</option>
                        </select>
                        <small class="form-text text-muted">{{ 'Class:PersonalToken/Attribute:scope+'|dict_s }}</small>
                    </div>
                    <div class="form-group">
                        <label for="token-expiration">{{ 'Class:PersonalToken/Attribute:expiration_date'|dict_s }}</label>
                        <select class="form-control" id="token-expiration" name="expiration_days">
                            <option value="30">30 days</option>
                            <option value="60">60 days</option>
                            <option value="90" selected>90 days</option>
                            <option value="180">180 days</option>
                            <option value="365">1 year</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">{{ 'Portal:PersonalTokens:Create'|dict_s }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

{# Token Created Modal (shows the generated token) #}
<div class="modal fade" id="tokenCreatedModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Token Created Successfully</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-triangle"></i> {{ 'Portal:PersonalTokens:CopyWarning'|dict_s }}
                </div>
                <div class="form-group">
                    <label>Your Personal Token:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="generated-token" readonly>
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" id="copy-token-btn">
                                <i class="fa fa-clipboard"></i> {{ 'Portal:PersonalTokens:Copy'|dict_s }}
                            </button>
                        </span>
                    </div>
                </div>
                <div id="copy-success" class="alert alert-success" style="display:none;">
                    <i class="fa fa-check"></i> Token copied to clipboard!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
            </div>
        </div>
    </div>
</div>

{# Confirm Delete Modal #}
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Confirm Delete</h4>
            </div>
            <div class="modal-body">
                <p>{{ 'Portal:PersonalTokens:ConfirmDelete'|dict_s }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-btn">Delete</button>
            </div>
        </div>
    </div>
</div>

